<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <ClipperA.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        android:id="@+id/image"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/outline_clear_24"
        android:id="@+id/closeBtn"
        />  
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="#888888"
        >
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/outline_flip_camera_android_24"
            android:id="@+id/rotateBtn"
            />  
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
             android:background="@drawable/outline_panorama_fish_eye_24"
            android:id="@id/takePictureBtn"
            />  
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
             android:background="@drawable/outline_flash_off_24"
            android:id="@+id/flashBtn"
            />  
         <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:visibility="gone"
             android:background="@drawable/outline_clear_24"
            android:id="@+id/clearBtn"
            />  
         <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
             android:background="@drawable/outline_done_24"
            android:id="@+id/doneBtn"
            />  
    </RelativeLayout>
    
</RelativeLayout>
