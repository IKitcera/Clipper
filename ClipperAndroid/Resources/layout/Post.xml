<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="horizontal"
    android:background="@color/colorContrast1"
    android:id="@+id/postItem"
       >
    <shape
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:shape="oval"
        android:foregroundGravity="right">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/userIcon"/>

    </shape>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:foreground="#ff536dfe"
        android:id="@+id/postImage"
        android:contentDescription="@android:string/yes" 
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
         android:layout_marginTop="300.0dp"
        android:id="@+id/reactionUp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="300.0dp"
        android:layout_marginTLeft="100.0dp"
        android:gravity="right"
        android:id="@+id/reactionDown"
        android:paddingLeft="100dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txtBelow"
        android:layout_marginTop="330.0dp" />

</RelativeLayout>